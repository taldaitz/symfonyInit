<div class="shadow p-3 mb-5 bg-white rounded">

    <h2>{{ article.title }}</h2>
    <a href="{{ path('authorPage', {'id': article.writer.id}) }}">{{ article.writer.fullname }}</a><br>
    <em> {{ article.date|date('d/m/Y') }} </em>

    <p class="text-justify">
        {{ article.content }}
    </p>
    
</div>